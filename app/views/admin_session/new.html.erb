<div id="wrapper">
  <%= render "/static_pages/admin_sidebar" %>
  <div id="page-content-wrapper">
    <%= render "/static_pages/flash_container" %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          
          <% provide(:title, "Log in admin") %>
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              
              <%= form_for :session, url: 'login', :html => {:class => "form-signin"} do |f| %>

                <br><br>
                <div class="form-group">
                  <%= f.text_field :login_id, class: 'form-control', placeholder: 'id' %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', placeholder: 'password' %>
                </div>

                

                <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block black-background white" %>
              <% end %>
            </div>
          </div>
          <%= render "/static_pages/menu_toggle" %>
        </div>
      </div>
    </div>
  </div>
</div>






