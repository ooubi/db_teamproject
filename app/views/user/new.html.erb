<div id="wrapper">
  <%= render "/static_pages/sidebar" %>
  <div id="page-content-wrapper">
    <%= render "/static_pages/flash_container" %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <% provide(:title, "Sign in") %>
          <div class="row">
            <div class="flash_container">
            <% flash.each do |key, value| %>
              <div class="alert alert-<%= key %>"><%= value %></div>
            <% end %>
            <%= yield %>
            </div>
            
            <div class="col-md-6 col-md-offset-3">
              <h1>Join</h1>
              <%= form_for(:user, :url => { :controller => "user", :action => "create"}, :method => "post" ) do |f| %>
                
                <div class="form-group">
                  <%= f.text_field :login_id, class: 'form-control', placeholder: 'id' %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', placeholder: 'password' %>
                </div>

                <div class="form-group">
                  <%= f.text_field :name, class: 'form-control', placeholder: 'name' %>
                </div>

                <div class="form-group">
                  <%= f.select(:sex, ['female', 'male'], {include_blank: "Sex (Female or male)"}, { :class => 'form-control' }) %>
                </div>

                <div class="form-group">
                  <%= f.text_field :address, class: 'form-control', placeholder: 'address(optional)' %>
                </div>

                <div class="form-group">
                  <%= f.date_field :birthdate, class: 'form-control', placeholder: 'birthdate(ex. 1988-12-25)'%>
                </div>

                <div class="form-group">
                  <%= f.text_field :cellphone, class: 'form-control', placeholder: 'cellphone (ex. 010-1234-5678' %>
                </div>


                <div class="form-group">
                  <%= f.select(:is_submit, [['Submit user', true], ['Evaluate user', false]], {include_blank: "User type"}, { :class => 'form-control' }) %>
                </div>

                <%= f.submit "Join", class: "btn btn-primary" %>

              <% end %>
            </div>
          </div>
          <%= render "/static_pages/menu_toggle" %>
        </div>
      </div>
    </div>
  </div>
</div>



