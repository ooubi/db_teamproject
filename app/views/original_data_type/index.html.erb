<div id="wrapper">
  <%= render "/static_pages/sidebar" %>
  <div id="page-content-wrapper">
    <%= render "/static_pages/flash_container" %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          
            <h1>Listing Details for <%= @task.tdt_name %></h1>
            <h3> Summary </h3>
            Tuple Num : <%= @tuple_num %> <br>
            My PDSF Num : <%= @my_pdsf_num %> <br>
            <h3> ODTs </h3>
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th> Name </th>
                  <th> Schema Info </th>
                  <th> Mapping Info </th>
                  <th> Action </th>
                  <th> Submit </th>
                </tr>
              </thead>
              <tbody>
                <% @odts.each do |odt| %>
                  <tr>
                    <td><%= odt.odt_name %></td>
                    <td><%= odt.schema_info %></td>
                    <td><%= odt.mapping_info %></td>
                    <td>
                    <%= form_for(:original_data_file, :url => { :controller => "original_data_file", :action => "upload", :odt_id => odt.odt_id, :task_id => @task.task_id}, :method => "post" ) do |f| %>
                      <%= f.file_field :data, accept: 'text/csv'%>
                      </td><td>
                      <%= f.submit "Submit", class: "btn btn-primary" %>
                      <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>
          <%= render "/static_pages/menu_toggle" %>
        </div>
      </div>
    </div>
  </div>
</div>